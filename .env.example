############################################
# Environment variable template for
# AI Album Cover Generator
# Copy this file to `.env.local` and populate
# the required variables before running the app.
# Never commit your actual secrets into version control.
############################################

## NextAuth configuration
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

## Database URL (SQLite used by default)
DATABASE_URL="file:./dev.db"

## Google OAuth (required for Google login)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

## OpenAI API key for image generation
OPENAI_API_KEY=

## Stripe API keys
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=


## AWS S3 credentials (optional for image storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=