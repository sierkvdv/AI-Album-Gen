// Prisma schema for AI Album Cover Generator
// Defines the core models used by the application.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(cuid())
  name           String?
  email          String?         @unique
  emailVerified  DateTime?
  image          String?
  credits        Int             @default(0)
  isAdmin        Boolean         @default(false)
  accounts       Account[]
  sessions       Session[]
  creditLedger   CreditLedger[]
  generations    Generation[]
  payments       Payment[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model Account {
  id                 String   @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())

  @@unique([identifier, token])
}

/// A record of credits being granted, purchased or used.
model CreditLedger {
  id        String    @id @default(cuid())
  userId    String
  type      String    // 'grant' | 'purchase' | 'use'
  amount    Int
  reference String?   // e.g. stripeSessionId or generationId
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
}

/// Album cover generation record
model Generation {
  id          String    @id @default(cuid())
  userId      String
  prompt      String
  style       String
  imageUrl    String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
}

/// Payment record capturing Stripe purchases
model Payment {
  id              String   @id @default(cuid())
  userId          String
  stripeSessionId String   @unique
  credits         Int
  amount          Int      // stored in cents
  currency        String   @default("usd")
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt       DateTime @default(now())
}