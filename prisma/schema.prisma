generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("SUPABASE_URL")
  directUrl = env("SUPABASE_URL")
}

model User {
  id             String          @id @default(cuid())
  name           String?
  email          String?         @unique
  emailVerified  DateTime?
  image          String?
  credits        Int             @default(0)
  isAdmin        Boolean         @default(false)
  accounts       Account[]
  sessions       Session[]
  creditLedger   CreditLedger[]
  generations    Generation[]
  projects       Project[]
  payments       Payment[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model Account {
  id                 String   @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())

  @@unique([identifier, token])
}

model CreditLedger {
  id        String    @id @default(cuid())
  userId    String
  type      LedgerType
  amount    Int
  reference String?
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
}

model Generation {
  id          String    @id @default(cuid())
  userId      String
  prompt      String
  style       String
  imageUrl    String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  projects    Project[]
  createdAt   DateTime  @default(now())
}

model Payment {
  id              String   @id @default(cuid())
  userId          String
  stripeSessionId String   @unique
  credits         Int
  amount          Int
  currency        String   @default("usd")
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt       DateTime @default(now())
}

enum LedgerType {
  GRANT
  PURCHASE
  USE
}

/// Project state for the image editor. Stores serialized crop, filter, and layer data.
model Project {
  /// Unique ID for the project.
  id            String      @id @default(cuid())
  /// Owner of the project.
  userId        String
  /// Generation this project is based on.
  generationId  String
  /// URL to the base image asset (original generation).
  baseAssetUrl  String
  /// Width of the base image in pixels.
  baseWidth     Int
  /// Height of the base image in pixels.
  baseHeight    Int
  /// Serialized crop information (aspect ratio, x/y offsets and scale).
  crop          Json
  /// Serialized filters settings.
  filters       Json
  /// Serialized list of text layers with their transforms and styling.
  layers        Json
  /// Timestamp when the project was created.
  createdAt     DateTime    @default(now())
  /// Timestamp when the project was last updated.
  updatedAt     DateTime    @updatedAt
  /// Relationship back to the User.
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  /// Relationship to the Generation this project is derived from.
  generation    Generation  @relation(fields: [generationId], references: [id], onDelete: Cascade)
}
